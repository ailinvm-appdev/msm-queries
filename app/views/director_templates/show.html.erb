<h1>
  Director #<%= @director_of_interest.id %> details
</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_director/<%= @director_of_interest.id %> " class="btn btn-block btn-outline-secondary">
  Delete director
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @director_of_interest.name %> 
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @director_of_interest.dob %> 
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @director_of_interest.bio %> 
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <%= @director_of_interest.image %> 
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @director_of_interest.created_at %> 
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @director_of_interest.updated_at %> 
  </dd>
</dl>


<h2>Filmography</h2>

<table border="1">
<% @filmography.each do |a_film| %> 
<tr>
<td>
<%= a_film.id %>
</td>

<td>
<%= a_film.image %>
</td>

<td>
<%= a_film.title %>
</td>

<td>
<%= a_film.year %>
</td>

<td>
<%= @director_of_interest.name %>
</td>

<td>
<a href="/movies">
  Show details
  </a>
</td>

</tr>
<% end %>
</table>
